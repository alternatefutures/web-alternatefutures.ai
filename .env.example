# =============================================================================
# Marketing Site (web-alternatefutures.ai) — Environment Variables
# =============================================================================
# Copy to .env and fill in values. NEVER commit .env files.
# =============================================================================

# --- App URL (used for metadata base URL) ---
NEXT_PUBLIC_API_URL=http://localhost:3000

# --- GraphQL API (for status page) ---
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:1602/graphql

# --- Email (Resend — for access request form and team invites) ---
RESEND_API_KEY=
ACCESS_REQUEST_EMAIL=system@alternatefutures.ai

# --- Scheduled publishing (Vercel Cron) ---
CRON_SECRET=
SERVICE_TOKEN=

# --- X (Twitter) — OAuth 1.0a User Context (required for posting) ---
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=

# --- Bluesky ---
BLUESKY_HANDLE=
BLUESKY_APP_PASSWORD=

# --- Mastodon ---
MASTODON_INSTANCE_URL=https://mastodon.social
MASTODON_ACCESS_TOKEN=

# --- LinkedIn ---
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_AUTHOR_URN=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REFRESH_TOKEN=

# --- Reddit ---
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_REFRESH_TOKEN=
REDDIT_SUBREDDIT=alternatefutures

# --- Discord ---
DISCORD_WEBHOOK_URL=

# --- Telegram ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# --- Dev mode (uses mock data instead of GraphQL) ---
NEXT_PUBLIC_USE_SEED_DATA=true
